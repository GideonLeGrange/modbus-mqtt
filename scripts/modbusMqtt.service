[Unit]
Description=Modbus MQTT Service
[Service]
ExecStart=/usr/bin/java -jar /usr/local/mqtt-modbus/modbus-mqtt-1.0-SNAPSHOT-jar-with-dependencies.jar /usr/local/mqtt-modbus/config.yml
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
KillMode=process
Type=simple
User=pi
[Install]
WantedBy=multi-user.target
